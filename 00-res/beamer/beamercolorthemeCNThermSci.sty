    \setbeamercolor*{palette primary}{bg=Lblu!25!white,fg=black}
    \setbeamercolor*{palette secondary}{bg=black!25!white,fg=Lblu!25!black}
    \setbeamercolor*{palette tertiary}{bg=Lmag!25!white,fg=black}
    \setbeamercolor*{palette quaternary}{bg=black!25!white,fg=Lblu!25!black}
}


